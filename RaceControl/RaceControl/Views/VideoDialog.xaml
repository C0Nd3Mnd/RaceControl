<UserControl
    x:Class="RaceControl.Views.VideoDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
    prism:ViewModelLocator.AutoWireViewModel="True">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterOwner" />
            <Setter Property="ResizeMode" Value="CanResizeWithGrip" />
            <Setter Property="ShowInTaskbar" Value="True" />
            <Setter Property="Width" Value="1000" />
            <Setter Property="Height" Value="600" />
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <vlc:VideoView Grid.Row="0" MediaPlayer="{Binding MediaPlayer}" />
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button
                Width="75"
                Command="{Binding PauseCommand}"
                Content="Pause" />
            <Button
                Width="75"
                Command="{Binding SyncVideoCommand}"
                Content="Sync" />
            <Button
                Width="75"
                Command="{Binding FastForwardCommand}"
                Content="+1 min" />
            <Label Content="Audio" />
            <ComboBox
                Width="175"
                DisplayMemberPath="Name"
                ItemsSource="{Binding AudioTrackDescriptions}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding AudioTrackSelectionChangedCommand}" PassEventArgsToCommand="True" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
            <Label Content="Video" />
            <ComboBox
                Width="175"
                DisplayMemberPath="Name"
                ItemsSource="{Binding VideoTrackDescriptions}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding VideoTrackSelectionChangedCommand}" PassEventArgsToCommand="True" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
            <Label Content="Chromecast" />
            <ComboBox
                Width="175"
                DisplayMemberPath="Name"
                ItemsSource="{Binding RendererItems}"
                SelectedItem="{Binding SelectedRendererItem}" />
            <Button
                Width="75"
                Command="{Binding CastVideoCommand}"
                Content="Cast" />
        </StackPanel>
    </Grid>
</UserControl>